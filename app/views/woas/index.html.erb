<h1>find your Work of Art</h1>




<form class="form-inline">
  <div class="form-group">
    <label for="exampleInputName2">Category</label>
    <input type="text" class="form-control" id="exampleInputName2" placeholder="sculptur">
  </div>
  <div class="form-group">
    <label for="exampleInputEmail2">Location</label>
    <input type="email" class="form-control" id="exampleInputEmail2" placeholder="Paris">
  </div>
  <button type="submit" class="btn btn-default">find</button>
</form>







<div class="container-cards">

  <% @woas.each do |woa| %>

    <div class="card">
      <div><%= woa.title %></div>
      <div><%= woa.category %></div>
      <div><%= woa.description %></div>
      <p><%= woa.price %> $</p>
    </div>

  <% end %>

</div>








